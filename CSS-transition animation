<!DOCTYPE html>
<html>
<head>
<title>Test</title>
<style>
  
  #animate {

      width: 50px; height: 50px;
      text-align: center;
      position: absolute;
      background-color:  #fff;
      -webkit-transition: left 3s, top 3s ease ; /* Safari */
      transition: left 3s, top 3s  ease;/* rest of the world */
  }
   #animate:hover{
     background-color:  #eee;
   }
  #container{
    position: relative;
    background-color: #888;
    height: 150px;
    }
  }

</style>
</head>
<body>

<div id="container">
  <div id="animate">
    Click Me!
  </div>
</div>

<script>

  var div=document.getElementById("animate");
  var toggle=false;
  div.addEventListener("click",setPosition); // calls setPosition every time you CLICK on the div. 
                                            // try clicking MID-transition!

  function setPosition(ev)
  {
    toggle=!toggle; // will go true-false-true-false etc..
    if(toggle)
    {
      ev.target.style.left="15px";
      ev.target.style.top="15px";
    }else
    {
      ev.target.style.left="150px";
      ev.target.style.top="105px";
    }
  }

</script>
</body>
</html>
